<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <ScrollView
       android:background="@color/grey3"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="bus inamge"
                    android:id="@+id/busimages"
                    android:layout_width="150dp"
                    android:layout_height="101dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/pickbus" />

                <android.support.v7.widget.CardView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/grey2">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       >

                        <TextView
                            android:id="@+id/curlocbus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/green"
                            android:gravity="center_horizontal"
                            android:text="Current Location"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="10dp">

                                <TextView
                                    android:gravity="end"
                                    android:id="@+id/pickup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Picking Up"
                                    android:textColor="@color/white"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                                <TextView
                                    android:id="@+id/routeno"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="Route No."
                                    android:textColor="@color/white"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/eta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ETA (mins)        "
                                    android:textColor="@color/white"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView6" />


                            </LinearLayout>

                            <LinearLayout
                                android:gravity="start|center_vertical"
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="10dp">


                                <TextView
                                    android:id="@+id/claloc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="  "
                                    android:textColor="@color/white"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/textView6"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/routevalue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:textColor="@color/white"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/textView7"
                                    app:layout_constraintTop_toBottomOf="@+id/textView10" />

                                <TextView
                                    android:id="@+id/etavalue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textColor="@color/white"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/textView11"
                                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/know"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Know More With SchoolWare"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/grey3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:contentDescription="google map"
                            android:onClick="openbusloc"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/googlemapbutton"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/grey3"
                            android:src="@mipmap/googlemapvforeground" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Google Map"
                            android:gravity="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="2dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <ImageButton
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="openbusdetail"
                        android:contentDescription="buslocaiton"
                        android:id="@+id/buslocbutton"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/grey3"
                        android:src="@mipmap/busvforeground" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="Bus Detail"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="2dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="feedback"
                            android:id="@+id/feedbaxk"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/grey3"
                            android:src="@mipmap/feedbackvforeground" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Feedback"
                            android:gravity="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="2dp">
                <TextView
                    android:layout_width="100dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="100dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="100dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/grey3">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="vertical"
                       android:layout_height="match_parent">

                    <ImageButton
                        android:contentDescription="call button"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="opencall"
                        android:id="@+id/calbutton"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/grey3"
                        android:src="@mipmap/callvforeground" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Call"
                        android:gravity="center"
                        android:textColor="@color/white"/>

                   </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="2dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
                <android.support.v7.widget.CardView
                    android:id="@+id/helpcard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <ImageButton
                            android:id="@+id/helpbutton"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/grey3"
                            android:src="@mipmap/helpvforeground" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Help"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="2dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <ImageButton
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="share"
                            android:contentDescription="share location"
                            android:id="@+id/shareloac"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/grey3"
                            android:src="@mipmap/sharelocvforeground" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Share Location"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
   </ScrollView>

</LinearLayout>