<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="@string/premises_image"
                    android:id="@+id/classimage"
                    android:layout_width="150dp"
                    android:layout_height="101dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/eye" />

                <android.support.v7.widget.CardView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/grey2">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                                                            >
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/green"
                            android:gravity="center_horizontal"
                            android:text="Current Location"
                            android:textColor="@color/text"
                            android:textSize="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="10dp">

                                <TextView
                                    android:id="@+id/textView11"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Floor                "
                                    android:textColor="@color/text"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="Clasroom"
                                    android:textColor="@color/text"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Building No. "
                                    android:textColor="@color/text"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView6" />


                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="10dp">


                                <TextView
                                    android:id="@+id/classloc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="X-A"
                                    android:textColor="@color/text"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/textView6"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/classromm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/textView7"
                                    app:layout_constraintTop_toBottomOf="@+id/textView10" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textColor="@color/text"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/textView11"
                                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Know More With SchoolWare"
                    android:textColor="@color/text"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent"
                   >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                      <ImageButton
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="feespayment"
                            android:id="@+id/Feespayment"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/background"
                            android:src="@mipmap/feesvforeground" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Fee Payment"
                            android:gravity="center"
                            android:background="@color/background"
                            android:textColor="@color/text"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="1dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <ImageButton
                        android:contentDescription="Fee Payment"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="showloaction"
                        android:id="@+id/imageButton5"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/background"
                        android:src="@mipmap/mapvforeground" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="@color/background"
                            android:gravity="center"
                            android:text="Map"
                            android:textColor="@color/text" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="1dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="openbustab"
                            android:id="@+id/imageButton3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/background"
                            android:src="@mipmap/buslocvforeground" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="@color/background"
                            android:gravity="center"
                            android:text="Bus"
                            android:textColor="@color/text" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="1dp">
                <TextView
                    android:layout_width="100dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="100dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="100dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/grey3">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="vertical"
                       android:layout_height="match_parent">

                    <ImageButton
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="openmemories"
                        android:id="@+id/memoriesbutton"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/background"
                        android:src="@mipmap/albumvforeground" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Memories"
                        android:background="@color/background"
                        android:gravity="center"
                        android:textColor="@color/text"/>

                   </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="1dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <ImageButton
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="openhelp"
                            android:id="@+id/imageButton2"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/background"
                            android:src="@mipmap/helpvforeground" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Help"
                            android:background="@color/background"
                            android:textColor="@color/text"
                            android:gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="1dp"
                    android:background="@color/line"
                    android:layout_height="match_parent"/>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/grey3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <ImageButton
                            android:contentDescription="invite button"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="invite"
                            android:id="@+id/invitebutton"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/background"
                            android:src="@mipmap/invitevforeground" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Invite"
                            android:background="@color/background"
                            android:textColor="@color/text"
                            android:gravity="center"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>